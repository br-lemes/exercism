{
    "env": { "browser": true, "jest": true },
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "ignorePatterns": [
        "**/*.spec.js",
        "**/*.test.ts",
        "*/**/*.config.js",
        "solutions/javascript/annalyns-infiltration/1/*",
        "solutions/javascript/isbn-verifier/[12345]/*",
        "solutions/javascript/list-ops/1/*",
        "solutions/typescript/bob/1/*",
        "solutions/typescript/collatz-conjecture/1/*",
        "solutions/typescript/difference-of-squares/[13]/*",
        "solutions/typescript/dnd-character/1/*",
        "solutions/typescript/hello-world/1/*",
        "solutions/typescript/leap/1/*",
        "solutions/typescript/luhn/1/*",
        "solutions/typescript/rational-numbers/1/*",
        "solutions/typescript/resistor-color/1/*",
        "solutions/typescript/scrabble-score/1/*",
        "vendor"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": { "ecmaVersion": "latest", "sourceType": "module" },
    "plugins": ["simple-import-sort", "@typescript-eslint"],
    "rules": {
        "@typescript-eslint/consistent-type-imports": "warn",
        "accessor-pairs": "warn",
        "array-bracket-spacing": "warn",
        "array-callback-return": "warn",
        "arrow-parens": "warn",
        "arrow-spacing": "warn",
        "block-spacing": "warn",
        "brace-style": ["warn", "1tbs", { "allowSingleLine": true }],
        "comma-dangle": ["warn", "always-multiline"],
        "comma-spacing": "warn",
        "comma-style": ["warn", "last"],
        "computed-property-spacing": "warn",
        "curly": ["warn", "multi-line"],
        "default-case-last": "warn",
        "dot-location": ["warn", "property"],
        "dot-notation": "warn",
        "eol-last": "warn",
        "eqeqeq": "warn",
        "func-call-spacing": "warn",
        "func-style": ["warn", "declaration", { "allowArrowFunctions": true }],
        "generator-star-spacing": ["warn", "after"],
        "handle-callback-err": ["warn", "^(err|error)$"],
        "jsx-quotes": ["warn", "prefer-single"],
        "key-spacing": "warn",
        "keyword-spacing": "warn",
        "linebreak-style": ["warn", "unix"],
        "lines-between-class-members": [
            "warn",
            "always",
            { "exceptAfterSingleLine": true }
        ],
        "max-len": ["warn", { "code": 100, "ignoreUrls": true }],
        "new-cap": ["warn", { "capIsNew": false }],
        "new-parens": "warn",
        "no-caller": "warn",
        "no-duplicate-imports": "warn",
        "no-eval": "warn",
        "no-extend-native": "warn",
        "no-extra-bind": "warn",
        "no-extra-parens": ["warn", "functions"],
        "no-floating-decimal": "warn",
        "no-implied-eval": "warn",
        "no-iterator": "warn",
        "no-label-var": "warn",
        "no-labels": "warn",
        "no-lone-blocks": "warn",
        "no-mixed-operators": [
            "warn",
            {
                "groups": [
                    ["==", "!=", "===", "!==", ">", ">=", "<", "<="],
                    ["&&", "||"],
                    ["in", "instanceof"]
                ]
            }
        ],
        "no-multi-spaces": "warn",
        "no-multi-str": "warn",
        "no-multiple-empty-lines": ["warn", { "max": 1 }],
        "no-new": "warn",
        "no-new-func": "warn",
        "no-new-object": "warn",
        "no-new-require": "warn",
        "no-new-wrappers": "warn",
        "no-octal-escape": "warn",
        "no-path-concat": "warn",
        "no-proto": "warn",
        "no-return-assign": "warn",
        "no-self-compare": "warn",
        "no-sequences": "warn",
        "no-tabs": "warn",
        "no-template-curly-in-string": "warn",
        "no-throw-literal": "warn",
        "no-trailing-spaces": "warn",
        "no-undef-init": "warn",
        "no-unmodified-loop-condition": "warn",
        "no-unneeded-ternary": ["warn", { "defaultAssignment": false }],
        "no-unreachable-loop": "warn",
        "no-unused-expressions": [
            "warn",
            {
                "allowShortCircuit": true,
                "allowTaggedTemplates": true,
                "allowTernary": true
            }
        ],
        "no-use-before-define": [
            "warn",
            { "classes": false, "functions": false, "variables": false }
        ],
        "no-useless-call": "warn",
        "no-useless-computed-key": "warn",
        "no-useless-constructor": "warn",
        "no-useless-rename": "warn",
        "no-var": "warn",
        "no-void": "warn",
        "no-whitespace-before-property": "warn",
        "object-curly-newline": [
            "warn",
            { "consistent": true, "multiline": true }
        ],
        "object-curly-spacing": ["warn", "always"],
        "object-property-newline": [
            "warn",
            { "allowAllPropertiesOnSameLine": true }
        ],
        "object-shorthand": ["warn", "properties"],
        "one-var": ["warn", { "initialized": "never" }],
        "operator-linebreak": [
            "warn",
            "after",
            { "overrides": { ":": "before", "?": "before", "|>": "before" } }
        ],
        "padded-blocks": ["warn", "never"],
        "prefer-arrow-callback": "warn",
        "prefer-regex-literals": [
            "warn",
            { "disallowRedundantWrapping": true }
        ],
        "quote-props": ["warn", "as-needed"],
        "quotes": ["warn", "single", { "avoidEscape": true }],
        "rest-spread-spacing": "warn",
        "semi": ["warn", "always"],
        "semi-spacing": "warn",
        "simple-import-sort/imports": [
            "warn",
            {
                "groups": [
                    ["^\\u0000"],
                    ["^node:"],
                    ["^@?\\w"],
                    ["^"],
                    ["^\\."]
                ]
            }
        ],
        "space-before-blocks": "warn",
        "space-before-function-paren": [
            "warn",
            { "anonymous": "always", "asyncArrow": "always", "named": "never" }
        ],
        "space-in-parens": "warn",
        "space-infix-ops": "warn",
        "space-unary-ops": "warn",
        "spaced-comment": [
            "warn",
            "always",
            { "block": { "balanced": true }, "markers": ["/"] }
        ],
        "symbol-description": "warn",
        "template-curly-spacing": "warn",
        "template-tag-spacing": "warn",
        "unicode-bom": "warn",
        "valid-typeof": ["error", { "requireStringLiterals": true }],
        "wrap-iife": ["warn", "any", { "functionPrototypeMethods": true }],
        "yield-star-spacing": ["warn", "both"],
        "yoda": "warn"
    }
}
