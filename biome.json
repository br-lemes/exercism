    "formatter": { "indentStyle": "space", "indentWidth": 4 },
    "javascript": {
        "formatter": { "jsxQuoteStyle": "single", "quoteStyle": "single" }
    },
    "linter": {
        "rules": {
            "security": { "noDangerouslySetInnerHtml": "off" },
            "style": { "noParameterAssign": "off" }
        }
    }
