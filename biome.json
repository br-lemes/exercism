            "!solutions/typescript/resistor-color/1/*",
            "!solutions/typescript/robot-simulator/1/*",
            "!solutions/typescript/scrabble-score/1/*",
            "!solutions/typescript/scrabble-score/2/*",
            "!solutions/typescript/simple-cipher/1/*",
            "!solutions/typescript/space-age/1/*",
            "!solutions/typescript/wordy/1/*"
