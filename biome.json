        "includes": [
            "**/*.js",
            "**/*.json",
            "**/*.ts",
            "!**/*.spec.js",
            "!**/*.test.ts",
            "!**/.exercism",
            "!*/**/*.config.js",
            "!*/**/.vscode",
            "!*/**/package.json",
            "!*/**/tsconfig.json",
            "!solutions/javascript/acronym/1/*",
            "!solutions/javascript/all-your-base/1/*",
            "!solutions/javascript/all-your-base/2/*",
            "!solutions/javascript/annalyns-infiltration/1/*",
            "!solutions/javascript/armstrong-numbers/1/*",
            "!solutions/javascript/circular-buffer/1/*",
            "!solutions/javascript/isbn-verifier/1/*",
            "!solutions/javascript/isbn-verifier/2/*",
            "!solutions/javascript/isbn-verifier/3/*",
            "!solutions/javascript/isbn-verifier/4/*",
            "!solutions/javascript/isbn-verifier/5/*",
            "!solutions/javascript/isbn-verifier/6/*",
            "!solutions/javascript/list-ops/1/*",
            "!solutions/javascript/list-ops/2/*",
            "!solutions/javascript/parallel-letter-frequency/1/*",
            "!solutions/javascript/parallel-letter-frequency/2/*",
            "!solutions/javascript/protein-translation/1/*",
            "!solutions/javascript/reverse-string/1/*",
            "!solutions/javascript/robot-simulator/1/*",
            "!solutions/javascript/space-age/1/*",
            "!solutions/javascript/zebra-puzzle/1/*",
            "!solutions/typescript/acronym/1/*",
            "!solutions/typescript/allergies/1/*",
            "!solutions/typescript/allergies/2/*",
            "!solutions/typescript/bob/1/*",
            "!solutions/typescript/bob/2/*",
            "!solutions/typescript/circular-buffer/1/*",
            "!solutions/typescript/collatz-conjecture/1/*",
            "!solutions/typescript/collatz-conjecture/2/*",
            "!solutions/typescript/difference-of-squares/1/*",
            "!solutions/typescript/difference-of-squares/3/*",
            "!solutions/typescript/etl/1/*",
            "!solutions/typescript/grade-school/1/*",
            "!solutions/typescript/hello-world/1/*",
            "!solutions/typescript/hello-world/2/*",
            "!solutions/typescript/leap/1/*",
            "!solutions/typescript/leap/2/*",
